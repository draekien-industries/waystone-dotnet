{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "generated/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "generated/_site/**",
          "obj/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ],
        "exclude": [
          "generated/_site/**",
          "obj/**"
        ]
      }
    ],
    "output": "generated/_site",
    "template": [
      "default",
      "modern",
      "./template"
    ],
    "globalMetadata": {
      "_appName": "Waystone.Net",
      "_appTitle": "Waystone.Net",
      "_copyrightFooter": "Â© draekien-industries. All rights reserved.",
      "_enableSearch": true,
      "_gitContribute": {
        "repo": "https://github.com/draekien-industries/waystone-dotnet",
        "branch": "main"
      },
      "pdf": true
    },
    "postProcessors": [
      "ExtractSearchIndex"
    ]
  }
}
